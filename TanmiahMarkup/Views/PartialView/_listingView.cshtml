                        <div class="swiper-slide">
                            <div class="card">
                                <a class="full-click" href="javascript:void(0)">product</a>
                                <div class="card-media">
                                    <div class="card-image">
                                        <img src="@Url.Content(item.Image)" class="object-fit"
                                             alt="Listing image">
                                    </div>
                                </div>
                                <div class="card-info-small">@item.FoodCategory</div>
                                <h3>@item.Title</h3>
                                <p>
                                    @item.Text
                                </p>
                            </div>
                        </div>
                        }
                        

